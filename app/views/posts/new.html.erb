<div class="container">
<h1>Add New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <div class="form-group">
      <%= text_field_tag(:title, params[:content], class: 'form-control') %>
    </div>  
    <div class="form-group">
    <%= text_area_tag(:content, params[:content], class: 'form-control') %>
    </div>
      <%= form.submit "Post", class: 'btn btn-info col-md-12' %>
  <% end %>

</div>


  