<div class="container">
    <h1>Home</h1>
    <% @posts.each do |post| %>
        <div class="card md-12 mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.content %></p>
                <a href="<%= edit_post_path(post.id) %>" class="btn btn-primary"> Update </a>
                <%= link_to 'Delete', post, method: :delete,  class: "btn btn-danger" %>
            </div>
        </div>  

    <% end %>
</div>