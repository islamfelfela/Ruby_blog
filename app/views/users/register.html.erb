<h1>Users#register</h1>
<p>Find me in app/views/users/register.html.erb</p>

<div class="container col-md-6">
    <%= form_tag( signup_path) do %>
        <div class="form-group">
        <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'User Name'  %>
        </div>

        <div class="form-group">
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password'  %>
        </div>

        <div class="form-group">
        <%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: 'Confirm Password'  %>
        </div>

        <%= submit_tag "SignUp", class: "btn btn-success col-md-12"  %>
        <% end %>
</div>